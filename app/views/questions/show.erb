<div class="container">

  <div class="individual-question">
    <h4><%= @question.title %></h4>
    <p><%= @question.score %> votes</p>
    <p>Created by: <%= @question.user.name %>, On: <%= @question.created_at %></p>
    <p><%= @question.content %></p>

    <% if @question.comments.count > 0 %>
    <div class="comments-container">
      <% @question.comments.each do |comment| %>
        <%= erb :"comments/_comment_show", locals: {comment: comment} %>
      <% end %>
    </div>
    <% end %>

  </div>

  <div class="answers-container">
    <% @question.answers.each do |answer|  %>

    <div class="individual-answer">

      <% if answer == @question.best_answer %>
        <p> ğŸ’¯ ğŸ’¯ ğŸ’¯ ğŸ’¯ ğŸ’¯ ğŸ’¯ ğŸ’¯ OMG BEST ANSWER ğŸ’¯ ğŸ’¯ ğŸ’¯ ğŸ’¯ ğŸ’¯ ğŸ’¯ ğŸ’¯ </p>
      <% end %>

      <p><%= answer.content %></p>
      <p>Answered by: <%= answer.user.name %>, On: <%= answer.created_at %></p>
      <span><%= answer.score %> votes</span>
      <% if answer.comments.count > 0 %>

      <% if owner?(@question) %>
        <form class="best-answer-button" method="POST" action="/answers/<%= answer.id %>/questions/<%= @question.id %>">
          <input type="hidden" name="_method" value="put">
          <input type="submit" value="Mark as best">
        </form>
      <% end %>

      <div class="comments-container">
        <% answer.comments.each do |comment| %>
        <div class="comments-container">
          <%= erb :"comments/_comment_show", locals: {comment: comment} %>
          </div>
        <% end %>

      <% end %>

    </div>
    <% end %>
  </div>

</div>
