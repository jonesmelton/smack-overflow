<div class="container">

  <div class="individual-question">
    <h4><%= @question.title %></h4>
    <p>Created by: <%= @question.user.name %>, On: <%= @question.created_at %></p>
    <p><%= @question.content %></p>

    <div class="comments-container">
      <% @question.comments.each do |comment| %>
        <%= erb :"comments/_comment_show", locals: {comment: comment} %>
      <% end %>
    </div>

  </div>

  <div class="answers-container">
    <% @question.answers.each do |answer|  %>
    <div class="individual-answer">
      <p><%= answer.content %></p>
      <p>Answered by: <%= answer.user.name %>, On: <%= answer.created_at %></p>

      <div class="comments-container">
        <% answer.comments.each do |comment| %>
          <%= erb :"comments/_comment_show", locals: {comment: comment} %>
        <% end %>
      </div>

    </div>
    <% end %>
  </div>

</div>
